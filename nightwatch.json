{
    "src_folders" : ["tests"],
    "output_folder": "reports/XMLReports",
    "custom_commands_path" : "",
    "custom_assertions_path" : "",
    "page_objects_path" : "pages",
    "globals_path" : "",
  
    "webdriver" : {
      "start_process": true
    },

    "test_workers": {
      "enabled": true,
      "workers": 3
    },
  
    "test_settings" : {
      "default" : {
        "webdriver": {
          "server_path": "lib/drivers/chromedriver",
          "port": 9515,
          "cli_args": [
            "--verbose"
          ]
        },
        "filter": ["./tests"],
        "desiredCapabilities" : {
          "browserName" : "chrome",
          "acceptInsecureCerts" : true
        }
      },
  
      "chrome" : {
        "webdriver": {
          "port": "9515",
          "server_path": "lib/drivers/chromedriver",
          "cli_args": [
            "--verbose"
          ],
          "screenshots": {
            "enabled": true,
            "path": "screenshots/"
          },
          "chromeOptions" : {
            "args" : ["start-maximized"]
          }
        },
        "desiredCapabilities" : {
          "browserName" : "chrome",
          "loggingPrefs": {"driver": "INFO", "server": "OFF", "browser": "INFO"}
        }
      },

      "firefox" : {
        "webdriver": {
          "port": "4444",
          "server_path": "lib/drivers/geckodriver",
          "cli_args": [
            "--log", "debug"
          ]
        }
      },
  
      "selenium_server" : {
        "selenium" : {
          "start_process": true,
          "host": "localhost",
          "server_path": "lib/drivers/selenium-server-standalone-3.141.59.jar",
          "cli_args": {
            "webdriver.chrome.driver": "lib/drivers/chromerdriver",
            "webdriver.firefox.driver": "lib/drivers/geckodriver"
          }
        },
  
        "desiredCapabilities" : {
          "browserName" : "chrome",
          "acceptSslCerts": true
        }
      } 
    }
  }
  